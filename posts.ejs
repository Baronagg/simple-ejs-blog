<%- include("partials/header") %>

<h1>All Posts</h1>

<% if (posts.length === 0) { %>
    <p>No posts available.</p>
<% } else { %>
    <% posts.forEach(post => { %>
        <div class="post-card">
            <h2><%= post.title %></h2>
            <p><%= post.content %></p>
        </div>
    <% }) %>
<% } %>

